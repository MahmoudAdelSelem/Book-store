<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src= "<%= product.imgurl %>" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"> $<%= product.price ? product.price  : "Not defiened"  %></h2>
                            <p class="product__description"> <%= product.description ? product.description  : "Not defiened"  %> </p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product.id %>" class="btn" > Details </a>
                            <form class= "add-cart" action ="/shop/cart" method="POST">
                                <button class="btn" type="submit">Add to Cart</button>
                                <input type="hidden" name="productId" value="<%= product.id %>">
                            </form>
                            <form class= "delete-cart" action ="/shop/delete/<%= product.id %>" method="POST">
                                <button class="btn" type="submit">Delete  Cart</button>
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <input type="hidden" name="productPrice" value="<%= product.price %>">
                            </form>
                            
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>